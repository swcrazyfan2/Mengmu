---
import BaseLayout from "@layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import landingImage from "@assets/images/landing.jpg" // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
import { getImage } from "astro:assets";
const optimizedImage = await getImage({src: landingImage, format: 'avif'})
---

<BaseLayout
  title="Calloway's Nursery - Premium Plants & Garden Supplies"
  description="Discover beautiful plants, flowers, and garden supplies at Calloway's Nursery. Expert landscaping services and seasonal showcases."
  preloadedImage = {optimizedImage}
>
  <!-- ============================================ -->
  <!--                    Hero                      -->
  <!-- ============================================ -->

  <section id="hero">
    <div class="cs-container">
      <div class="cs-content">
        <div class="cs-hero-card">
          <span class="cs-topper">Showcase Bright & Bold Color</span>
          <span class="cs-subtitle">Indoors & Outdoors</span>
          <h1 class="cs-title">Petra Crotons</h1>
          <p class="cs-text">Explore vibrant tropical plants</p>
          <a href="/plants" class="cs-button-solid">Shop Now</a>
        </div>
      </div>
    </div>

    <!-- Background Image -->
    <picture class="cs-picture">
      <source
        media="(max-width: 600px)"
        srcset="https://images.pexels.com/photos/1407305/pexels-photo-1407305.jpeg?auto=compress&cs=tinysrgb&w=600"
      />
      <source 
        media="(min-width: 601px)" 
        srcset="https://images.pexels.com/photos/1407305/pexels-photo-1407305.jpeg?auto=compress&cs=tinysrgb&w=1200" 
      />
      <img
        aria-hidden="true"
        decoding="async"
        src="https://images.pexels.com/photos/1407305/pexels-photo-1407305.jpeg?auto=compress&cs=tinysrgb&w=1200"
        alt="colorful croton plants"
        width="2500"
        height="1667"
        loading="eager"
      />
    </picture>
  </section>

  <!-- ============================================ -->
  <!--                 Categories                   -->
  <!-- ============================================ -->

  <section id="categories">
    <div class="cs-container">
      <div class="cs-card-group">
        <div class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1002703/pexels-photo-1002703.jpeg?auto=compress&cs=tinysrgb&w=400"
              alt="colorful flowers"
              width="300"
              height="200"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">Timeless Fall Favorites</h3>
          </div>
        </div>

        <div class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/416978/pexels-photo-416978.jpeg?auto=compress&cs=tinysrgb&w=400"
              alt="lawn care products"
              width="300"
              height="200"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">Lush Lawn Goals</h3>
          </div>
        </div>

        <div class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=400"
              alt="landscape plants"
              width="300"
              height="200"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">Bold Landscape Beauties</h3>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--               Services Grid                  -->
  <!-- ============================================ -->

  <section id="services-grid">
    <div class="cs-container">
      <div class="cs-content-group">
        <div class="cs-service-item cs-large">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1396122/pexels-photo-1396122.jpeg?auto=compress&cs=tinysrgb&w=600"
              alt="landscape design"
              width="500"
              height="400"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-service-content">
            <h3 class="cs-h3">Landscape Design & Install</h3>
          </div>
        </div>

        <div class="cs-service-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=400"
              alt="pick and plant service"
              width="300"
              height="300"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-service-content">
            <h3 class="cs-h3">Pick & Plant</h3>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Seasonal Showcase              -->
  <!-- ============================================ -->

  <section id="seasonal-showcase">
    <div class="cs-container">
      <div class="cs-content">
        <div class="cs-text-group">
          <h2 class="cs-title">Your Seasonal Showcase Starts Here</h2>
          <p class="cs-text">
            Celebrate each season with our expertly curated plant selections, 
            designed to bring year-round color to your space.
          </p>
          <a href="/plants" class="cs-button-solid">Plan Your Fall Garden</a>
        </div>
        <picture class="cs-picture">
          <img
            src="https://images.pexels.com/photos/1407305/pexels-photo-1407305.jpeg?auto=compress&cs=tinysrgb&w=600"
            alt="seasonal garden display"
            width="500"
            height="400"
            loading="lazy"
            decoding="async"
          />
        </picture>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--                Blog Preview                  -->
  <!-- ============================================ -->

  <section id="blog-preview">
    <div class="cs-container">
      <div class="cs-content">
        <h2 class="cs-title">Latest Ideas from the Blog</h2>
      </div>
      <div class="cs-card-group">
        <article class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1002703/pexels-photo-1002703.jpeg?auto=compress&cs=tinysrgb&w=300"
              alt="fall plants"
              width="200"
              height="150"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">11 Plants for Fall</h3>
          </div>
        </article>

        <article class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/416978/pexels-photo-416978.jpeg?auto=compress&cs=tinysrgb&w=300"
              alt="lawn care"
              width="200"
              height="150"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">Secrets Your Nursery & Garden Checklist</h3>
          </div>
        </article>

        <article class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1407305/pexels-photo-1407305.jpeg?auto=compress&cs=tinysrgb&w=300"
              alt="croton plants"
              width="200"
              height="150"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">All About Crotons</h3>
          </div>
        </article>

        <article class="cs-item">
          <picture class="cs-picture">
            <img
              src="https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=300"
              alt="garden design"
              width="200"
              height="150"
              loading="lazy"
              decoding="async"
            />
          </picture>
          <div class="cs-item-content">
            <h3 class="cs-h3">How to Design a Brilliant Fall</h3>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Garden Center Info             -->
  <!-- ============================================ -->

  <section id="garden-center-info">
    <div class="cs-container">
      <div class="cs-content">
        <picture class="cs-picture">
          <img
            src="https://images.pexels.com/photos/1396122/pexels-photo-1396122.jpeg?auto=compress&cs=tinysrgb&w=500"
            alt="Calloway's garden center"
            width="400"
            height="300"
            loading="lazy"
            decoding="async"
          />
        </picture>
        <div class="cs-text-group">
          <h2 class="cs-title">Explore Our Garden Center</h2>
          <p class="cs-text">
            Visit our expansive garden center and discover thousands of plants, 
            trees, and garden supplies. Our knowledgeable staff is here to help 
            you create the garden of your dreams with expert advice and quality 
            products that thrive in your local climate.
          </p>
          <a href="/about" class="cs-button-solid">Find a Location Near You</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--                Newsletter                    -->
  <!-- ============================================ -->

  <section id="newsletter">
    <div class="cs-container">
      <div class="cs-content">
        <div class="cs-text-group">
          <h2 class="cs-title">Blooming</h2>
          <span class="cs-subtitle">& Growing</span>
          <p class="cs-text">
            Discover beautiful, evergreen savings. Subscribe today. You get the best deals 
            delivered to your inbox and garden.
          </p>
          <a href="/newsletter" class="cs-button-solid">Learn About Our Blooming Rewards</a>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>

<style lang="less">
  /* STYLES FOR GARDEN CENTER LAYOUT */

  /*-- -------------------------- -->
<---           Hero             -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
    #hero {
      font-family: "Roboto", "Arial", sans-serif;
      padding: 0;
      min-height: 70vh;
      position: relative;
      z-index: 1;
      display: flex;
      align-items: center;
      justify-content: center;

      .cs-picture {
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -2;

        &:before {
          content: "";
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.3);
          display: block;
          position: absolute;
          top: 0;
          left: 0;
          z-index: 1;
        }

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
        }
      }

      .cs-container {
        width: 100%;
        max-width: (1280/16em);
        margin: auto;
        padding: (100/16rem) (16/16rem);
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .cs-content {
        text-align: center;
        width: 100%;
        max-width: (600/16rem);
      }

      .cs-hero-card {
        background: rgba(255, 255, 255, 0.95);
        padding: (40/16rem) (30/16rem);
        border-radius: (8/16rem);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      .cs-topper {
        font-size: (14/16rem);
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--bodyTextColor);
        margin-bottom: (8/16rem);
        display: block;
      }

      .cs-subtitle {
        font-size: (16/16rem);
        color: var(--bodyTextColor);
        margin-bottom: (16/16rem);
        display: block;
      }

      .cs-title {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 700;
        line-height: 1.2em;
        margin: 0 0 (16/16rem);
        color: var(--headerColor);
      }

      .cs-text {
        font-size: (16/16rem);
        line-height: 1.5em;
        margin: 0 0 (24/16rem);
        color: var(--bodyTextColor);
      }

      .cs-button-solid {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: (12/16rem) (24/16rem);
        border-radius: (4/16rem);
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s;

        &:hover {
          background-color: var(--primaryLight);
        }
      }
    }
  }

  /*-- -------------------------- -->
<---         Categories         -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
    #categories {
      padding: var(--sectionPadding);
      background-color: #fff;

      .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
      }

      .cs-card-group {
        display: grid;
        grid-template-columns: 1fr;
        gap: (30/16rem);
      }

      .cs-item {
        text-align: center;
        background: #fff;
        border-radius: (8/16rem);
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;

        &:hover {
          transform: translateY(-5px);
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
      }

      .cs-picture {
        width: 100%;
        height: (200/16rem);
        display: block;
        position: relative;
        overflow: hidden;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          transition: transform 0.3s;
        }
      }

      .cs-item:hover .cs-picture img {
        transform: scale(1.05);
      }

      .cs-item-content {
        padding: (20/16rem);
      }

      .cs-h3 {
        font-size: (18/16rem);
        font-weight: 600;
        margin: 0;
        color: var(--headerColor);
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #categories {
      .cs-card-group {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  }

  /*-- -------------------------- -->
<---        Services Grid       -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
    #services-grid {
      padding: var(--sectionPadding);
      background-color: var(--lightGray);

      .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
      }

      .cs-content-group {
        display: grid;
        grid-template-columns: 1fr;
        gap: (30/16rem);
      }

